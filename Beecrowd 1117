#include <stdio.h>
int main()
{
   float N,b,c=0,d=0;
    while(1)
    {
        if(d==2)
            break;
        scanf("%f", &N);
        if(N>=0 && N<=10)
        {
            d++;
            c+=N;
        }
        else
            printf("nota invalida\n");
    }
    b=c/2.00;
    printf("media = %.2f\n", b);
    return 0;
}
